<Window x:Class="CanvasTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Canvas>
        <Button Canvas.Top="10" Canvas.Left="10" Content="Button01"/>
        <Button Canvas.Top="10" Canvas.Right="10" Content="Button02"/>
        <Button Canvas.Bottom="10" Canvas.Left="10" Content="Button03"/>
        <Button Canvas.Bottom="10" Canvas.Right="10" Content="Button04"/>

        <Rectangle Fill="Red" Canvas.Top="120" Canvas.Left="120" Canvas.ZIndex="0"
                   Width="30" Height="30"/>
        <Rectangle Fill="Green" Canvas.Top="130" Canvas.Left="130" Canvas.ZIndex="1"
                   Width="30" Height="30"/>
        <Rectangle Fill="Blue" Canvas.Top="140" Canvas.Left="140" Canvas.ZIndex="0"
                   Width="30" Height="30"/>
    </Canvas>
</Window>
