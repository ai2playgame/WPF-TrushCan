<Window x:Class="PrismFirstProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBox Margin="5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <Button  Margin="5" 
                     Content="Add Name" Command="{Binding PushNameCommand, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <ListBox Grid.Column="1" ItemsSource="{Binding NameList}"/>
    </Grid>
</Window>
